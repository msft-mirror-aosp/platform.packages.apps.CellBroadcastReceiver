<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <selector android:constantSize="true" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">
      <item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/wear_image_button_background"/>
      <item android:state_enabled="true" android:state_checked="false" android:drawable="@drawable/wear_image_button_outline"/>
      <item android:state_enabled="true" android:state_checkable="false" android:drawable="@drawable/wear_image_button_background"/>
      <item android:state_enabled="false" android:drawable="@drawable/wear_image_button_outline"/>
    </selector>
  </item>
  <item android:drawable="?attr/wearSelectableItemBackgroundBorderless"/>
</layer-list>
