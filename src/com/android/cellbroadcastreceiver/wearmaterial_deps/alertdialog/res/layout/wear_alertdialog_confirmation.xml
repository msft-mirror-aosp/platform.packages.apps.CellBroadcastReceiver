<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/wear_alertdialog_confirmation_icon"
      android:layout_width="@dimen/wear_alertdialog_confirmation_icon_size"
      android:layout_height="@dimen/wear_alertdialog_confirmation_icon_size"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toTopOf="@id/wear_alertdialog_confirmation_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/wear_alertdialog_confirmation_guideline_top"
      tools:ignore="ContentDescription" />

  <TextView
      android:id="@+id/wear_alertdialog_confirmation_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:duplicateParentState="true"
      android:gravity="center"
      android:layout_marginHorizontal="@dimen/wear_alertdialog_message_margin_horizontal"
      android:textAppearance="?attr/textAppearanceWearTitle3"
      app:layout_constraintBottom_toBottomOf="@id/wear_alertdialog_confirmation_guideline_bottom"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/wear_alertdialog_confirmation_icon"
      app:layout_constraintVertical_chainStyle="packed"
      tools:text="start" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/wear_alertdialog_confirmation_guideline_top"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="@dimen/wear_alertdialog_confirmation_guideline" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/wear_alertdialog_confirmation_guideline_bottom"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="@dimen/wear_alertdialog_confirmation_guideline_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
