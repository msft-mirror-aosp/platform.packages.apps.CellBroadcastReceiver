<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wear_alertdialog_countdown_vertical_begin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/wear_alertdialog_countdown_confirmation_vertical_begin"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wear_alertdialog_countdown_vertical_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/wear_alertdialog_countdown_confirmation_vertical_end" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wear_alertdialog_countdown_horizontal_begin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/wear_alertdialog_countdown_confirmation_horizontal_begin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wear_alertdialog_countdown_horizontal_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/wear_alertdialog_countdown_confirmation_horizontal_end" />

    <TextView
        android:id="@+id/wear_alertdialog_countdown_confirmation_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="?attr/textStyleWearTitle3"
        app:layout_constraintStart_toStartOf="@id/wear_alertdialog_countdown_vertical_begin"
        app:layout_constraintEnd_toEndOf="@id/wear_alertdialog_countdown_vertical_end"
        app:layout_constraintTop_toTopOf="@id/wear_alertdialog_countdown_horizontal_begin"
        app:layout_constraintBottom_toTopOf="@id/wear_alertdialog_countdown_openonphone_icon"
        />

    <ImageView
        android:id="@+id/wear_alertdialog_countdown_openonphone_icon"
        android:layout_width="@dimen/wear_circular_button_diameter_standard"
        android:layout_height="@dimen/wear_circular_button_diameter_standard"
        android:scaleType="centerInside"
        android:src="@drawable/ic_wear_material_open_on_phone"
        android:foreground="@drawable/wear_open_on_phone_progress_ring"
        android:background="@drawable/wear_open_on_phone_background_selector"
        android:focusable="true"
        android:clickable="true"
        android:importantForAccessibility="yes"
        android:contentDescription="@android:string/ok"
        app:layout_constraintStart_toStartOf="@id/wear_alertdialog_countdown_vertical_begin"
        app:layout_constraintEnd_toEndOf="@id/wear_alertdialog_countdown_vertical_end"
        app:layout_constraintBottom_toTopOf="@id/wear_alertdialog_countdown_horizontal_end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
