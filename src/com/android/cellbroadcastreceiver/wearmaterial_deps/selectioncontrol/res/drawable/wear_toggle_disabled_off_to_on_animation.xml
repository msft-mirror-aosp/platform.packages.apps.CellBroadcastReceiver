<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_wear_toggle_on">
  <target android:name="thumb_selected">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
            android:duration="@integer/wear_selection_default_anim_duration_ms"
            android:interpolator="@anim/wear_selection_easing_incoming_80"
            android:propertyName="fillColor"
            android:valueFrom="?attr/wearSelectionDisabledColorUnselected"
            android:valueTo="?attr/wearSelectionDisabledColorSelected"
            android:valueType="colorType" />
        <objectAnimator
            android:duration="@integer/wear_selection_default_anim_duration_ms"
            android:interpolator="@anim/wear_selection_easing_incoming_80"
            android:propertyName="fillAlpha"
            android:valueFrom="0.6"
            android:valueTo="1.0"
            android:valueType="floatType" />
      </set>
    </aapt:attr>
  </target>
  <target android:name="thumb_selected_group">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
            android:duration="@integer/wear_toggle_position_anim_duration_ms"
            android:interpolator="@anim/wear_selection_easing_incoming_80"
            android:propertyName="translateX"
            android:valueFrom="-10.0"
            android:valueTo="0.0"
            android:valueType="floatType" />
      </set>
    </aapt:attr>
  </target>
  <target android:name="toggle_bar">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
            android:duration="@integer/wear_toggle_color_anim_duration_ms"
            android:interpolator="@anim/wear_selection_easing_outgoing_40_incoming_80"
            android:propertyName="fillColor"
            android:valueFrom="?attr/wearSelectionDisabledColorUnselected"
            android:valueTo="?attr/wearSelectionDisabledColorSelected"
            android:valueType="colorType" />
      </set>
    </aapt:attr>
  </target>
  <target android:name="toggle_white_flash">
    <aapt:attr name="android:animation">
      <set>
        <objectAnimator
            android:duration="@integer/wear_toggle_color_anim_duration_ms"
            android:interpolator="@anim/wear_selection_easing_outgoing_40_incoming_80"
            android:propertyName="fillAlpha"
            android:valueFrom="0.0"
            android:valueTo="0.2"
            android:valueType="floatType" />
        <objectAnimator
            android:duration="@integer/wear_toggle_alpha_anim_duration_ms"
            android:startOffset="@integer/wear_toggle_anim_duration_offset_ms"
            android:interpolator="@anim/wear_selection_easing_outgoing_25_incoming_25"
            android:propertyName="fillAlpha"
            android:valueFrom="0.2"
            android:valueTo="0.0"
            android:valueType="floatType" />
      </set>
    </aapt:attr>
  </target>
</animated-vector>
