<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.google.android.clockwork.common.wearable.wearmaterial.picker.WearPickerColumn"
    tools:ignore="Instantiatable">

  <!--
  When changing the implementation of this layout, look at the PickerColumn
  class' methods 'onMeasure' and 'onLayout' to ensure they'll work well together.
  -->
  <TextView
      android:id="@+id/wear_picker_column_label"
      style="?attr/wearColumnLabelStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:lines="1"
      android:visibility="gone"
      android:importantForAccessibility="no"
      android:focusable="false"
      tools:text="Label"
      tools:visibility="visible" />

  <com.google.android.clockwork.common.wearable.wearmaterial.picker.CenteredRecyclerView
      android:id="@+id/wear_picker_column_expanded"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:scrollbars="none"
      android:importantForAccessibility="no"
      app:scrollSpeedFactor="0.6"
      app:scrollDecelerationFactor="1.3"
      app:vignette="@drawable/wear_picker_blended_vignette" />

</merge>
